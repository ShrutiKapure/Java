class Lamp{
    
    boolean isOn, isOff;
     
    //method to turn on light
    void turnOn() {
    isOn = true;
    System.out.println("Light is on? " +isOn);
}
    //method to turn off light
    void turnOff(){
        isOff = false;
        System.out.println("Light is off? " +isOff);
    }
}
public class Main {

    public static void main(String[] args) {
      //creating objects
      Lamp led = new Lamp();
      Lamp halogen = new Lamp();
      
      //turn on and off by calling methods
      led.turnOn();
      halogen.turnOff();
      
    }
    
}
