import java.util.*;
public class Factorial {

    
    public static void main(String[] args) {
        int n, mul;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter a Number:");
        n = sc.nextInt();
        Factorial obj = new Factorial();
        mul = obj.fact(n);
        System.out.println("factorial of "+n+" :" +mul);
    }
    int fact(int x){
        if(x > 1){
            return(x * fact(x-1));
        }
        return 1;
    }
    
}
